@model List<Logistic_Management_Lib.Model.MAST_TRANSPORT_TYPE>

@{

    ViewData["Title"] = "Transport Type";
    Layout = "~/Views/Shared/_BaseMasterList.cshtml";
}

@section scripts{

    <script src="~/assets/js/custom/Masters/TransportType.js?123"></script>
    @{
        string Print_Key = ViewData["Print_Key"] as string;

    }

    <script>
        var Print_Key = '@Print_Key';
    </script>
}

@section AdditionalActions{

    <button id="btnAddnew" class="btn btn-sm btn-success ModuleAccess" data-module="8" data-access_level="2,3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" onclick="AddNew(this)">
        <i class="bi la-cart-plus fs-3 me-2"></i> Add
    </button>

    <button id="btnexporttransporttype" class="btn btn-sm btn-primary ModuleAccess" data-module="8" data-access_level="1,2,3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
        <i class="bi bi-printer fs-3 me-2"></i> Export List
    </button>
}

@section tableheader{
    <th style="display:none;"></th>
    <th class="min-w-40px text-gray-700 px-3" style="width:10%">Transport code</th>
    <th class="min-w-40px text-gray-700" style="width:50%">Description</th>
    <th class="min-w-40px text-gray-700" style="width:10%">Action</th>

}

@section tablebody{
    @{
        foreach (var eachmodel in Model)
        {
            <tr id="row">
                <td style="display:none;">@eachmodel.transport_type_id</td>
                <td class="min-w-40px px-3" style="width:10%">@eachmodel.transport_type_code</td>
                <td class="min-w-40px" style="width:50%">@eachmodel.transport_type_description</td>
                <td class="min-w-20px" style="width:10%">
                    <div id="divEdit">
                        <a class="btn btn-sm btn-link btn-color-primary btn-active-color-primary me-5 " href="#" onclick="EditRow(this);">Edit</a>
                        <a class="btn btn-sm btn-link btn-color-danger btn-active-color-danger me-5 Delete" href="#"></a>
                    </div>
                    <div class="hide" id="divSave">
                        <a class="btn btn-sm btn-link btn-color-success btn-active-color-success me-5 " href="#" onclick="SaveRow()">Save</a>
                        <a class="btn btn-sm btn-link btn-color-gray-500 btn-active-color-gray-500 me-5 " href="#" onclick="CancelEdit()">Cancel</a>
                    </div>
                </td>

            </tr>
        }
    }
}