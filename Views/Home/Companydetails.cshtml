@{
    ViewData["Title"] = "Company Details";
    Layout = "~/Views/Shared/_BaseMasterDetail.cshtml";
}
@section ActionList
{
    <button class="btn btn-sm btn-success ModuleAccess" data-module="1" data-access_level="2,3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" id="btnSaveInboundShipment">
        <i class="fas fa-pen fs-3 me-2"></i> Save
    </button>
    <button class="btn btn-sm btn-danger" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" onclick="NavigatePage('/Outbound/OutboundShipmentsList')">
        <i class="fas fa-window-close fs-3 me-2"></i> Back
    </button>
}

<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container-fluid mb-lg-0 mb-md-0 mb-13" style="padding: 0 15px;">
        <div class="row g-2 g-xl-5 h-100 px-5">
            <div class="tab-content h-100">
                <!--begin::Tab pane-->
                <div class="tab-pane show active" id="general_info" role="tab-panel">
                    <div class="card">
                        <div class="card-body px-0 pb-0">
                            <div class="row">
                                <div class="col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                                    <!--begin::Image-->
                                    <div class="card card-flush mb-5 mb-xl-5" id="divLogo">
                                        <div class="card-body text-center px-5">
                                            <!--begin::Image input-->
                                            <div class="image-input image-input-empty image-input-outline mb-3" data-kt-image-input="true" id="imgLogo">
                                                <!--begin::Preview existing avatar-->
                                                <div class="image-input-wrapper w-250px h-250px" style="background-size:contain; background-position:center; background-image: url('/assets/media/logos/logo_LeS.png')"></div>
                                                <!--end::Preview existing avatar-->
                                                <!--begin::Label-->
                                                <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" title="" data-bs-original-title="Change Image">
                                                    <!--begin::Icon-->
                                                    <i class="bi bi-pencil-fill fs-8"></i>
                                                    <!--end::Icon-->
                                                    <!--begin::Inputs-->
                                                    <input type="file" name="avatar" accept=".png, .jpg, .jpeg" id="imgLogoInput">
                                                    <input type="hidden" name="avatar_remove">
                                                    <!--end::Inputs-->
                                                </label>
                                                <!--end::Label-->
                                                <!--begin::Cancel-->
                                                <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="" data-bs-original-title="Cancel Image">
                                                    <i class="bi bi-x fs-2"></i>
                                                </span>
                                                <!--end::Cancel-->
                                                <!--begin::Remove-->
                                                <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" title="" data-bs-original-title="Remove Image">
                                                    <i class="bi bi-x fs-2"></i>
                                                </span>
                                                <!--end::Remove-->
                                            </div>
                                            <!--end::Image input-->
                                            <!--begin::Description-->
                                            <div class="text-muted fs-7 mt-5 mx-10">Set the company logo. Only *.png, *.jpg and *.jpeg image files are accepted</div>
                                            <!--end::Description-->
                                        </div>
                                    </div>
                                    <!--end::Image-->
                                    <div class="separator bg-light mt-10 mb-5 mx-5"></div>
                                    <div class="card card-flush">
                                        <div class="card-body">
                                            <div class="mb-10 fv-row fv-plugins-icon-container">
                                                <!--begin::Label-->
                                                <label class="form-label text-dark fw-bolder fs-8">License Key</label>
                                                <!--end::Label-->
                                                <!--begin::Key-->
                                                <div class="d-flex align-items-center flex-wrap">
                                                    <!--begin::Input-->
                                                    <div id="lblLicenseKey" class="me-5 fs-6">aa82a719-fb6f-4191-ad07-9a318a8e9a3b</div>
                                                    <!--end::Input-->
                                                    <!--begin::Button-->
                                                    <button class="btn btn-icon btn-sm btn-light" data-clipboard-target="#lblLicenseKey">
                                                        <span class="svg-icon svg-icon-2">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                                <path opacity="0.5" d="M18 2H9C7.34315 2 6 3.34315 6 5H8C8 4.44772 8.44772 4 9 4H18C18.5523 4 19 4.44772 19 5V16C19 16.5523 18.5523 17 18 17V19C19.6569 19 21 17.6569 21 16V5C21 3.34315 19.6569 2 18 2Z" fill="currentColor"></path>
                                                                <path fill-rule="evenodd" clip-rule="evenodd" d="M14.7857 7.125H6.21429C5.62255 7.125 5.14286 7.6007 5.14286 8.1875V18.8125C5.14286 19.3993 5.62255 19.875 6.21429 19.875H14.7857C15.3774 19.875 15.8571 19.3993 15.8571 18.8125V8.1875C15.8571 7.6007 15.3774 7.125 14.7857 7.125ZM6.21429 5C4.43908 5 3 6.42709 3 8.1875V18.8125C3 20.5729 4.43909 22 6.21429 22H14.7857C16.5609 22 18 20.5729 18 18.8125V8.1875C18 6.42709 16.5609 5 14.7857 5H6.21429Z" fill="currentColor"></path>
                                                            </svg>
                                                        </span>
                                                    </button>
                                                    <!--end::Button-->
                                                </div>
                                                <!--end::Key-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-8 col-xl-8 col-xxl-8 border border-end-0 border-top-0 border-bottom-0">
                                    <!--begin::General info-->
                                    <div class="card card-flush py-4" id="divCompanyInfo">
                                        <div class="card-body pt-0">
                                            <div class="row d-flex justify-content-center">
                                                <div class="col-xl-12">

                                                    <div class="mb-10 fv-row fv-plugins-icon-container">
                                                        <div class="col-xl-6">
                                                            <!--begin::Label-->
                                                            <label class="form-label text-dark fw-bolder fs-8 required">Company Type</label>
                                                            <!--end::Label-->
                                                            <!--begin::Input-->
                                                            <select name="selcompanytype" id="txtcompanytype" data-placeholder="Select Company Type"  data-control="select2" class="form-select fs-7 ">
                                                                <option>SUPPLIER</option>
                                                                <option>BUYER</option>
                                                            </select>    
                                                            <!--end::Input-->
                                                        </div>
                                                    </div>

                                                    <div class="separator bg-light my-10"></div>

                                                    <div class="mb-10 fv-row fv-plugins-icon-container">
                                                        <!--begin::Label-->
                                                        <label class="form-label text-dark fw-bolder fs-8 required">Company Name</label>
                                                        <!--end::Label-->
                                                        <!--begin::Input-->
                                                        <input type="text" id="txtCompName" class="form-control form-control-sm fs-7 text-dark" maxlength="200" data-id="100001">
                                                        <!--end::Input-->
                                                    </div>

                                                    <div class="mb-10 fv-row fv-plugins-icon-container">
                                                        <!--begin::Label-->
                                                        <label class="form-label text-dark fw-bolder fs-8 required">Address</label>
                                                        <!--end::Label-->
                                                        <!--begin::Input-->
                                                        <textarea type="text" id="txtAddress" class="form-control form-control-sm fs-7 text-dark"></textarea>
                                                        <!--end::Input-->

                                                    </div>

                                                    <div class="mb-10 fv-row fv-plugins-icon-container row">
                                                        <div class="col-12 col-xl-6">
                                                            <!--begin::Label-->
                                                            <label class="form-label text-dark fw-bolder fs-8 required">Postal Code</label>
                                                            <!--end::Label-->
                                                            <!--begin::Input-->
                                                            <input type="text" id="txtPostalCode" class="form-control form-control-sm fs-7 text-dark" maxlength="10">
                                                            <!--end::Input-->
                                                        </div>
                                                        <div class="col-12 col-xl-6">
                                                            <!--begin::Label-->
                                                            <label class="form-label text-dark fw-bolder fs-8 required">Country</label>
                                                            <!--end::Label-->
                                                            <!--begin::Input-->
                                                            <input type="text" id="txtCountry" class="form-control form-control-sm fs-7 text-dark" maxlength="100">
                                                            <!--end::Input-->
                                                        </div>
                                                    </div>

                                                    <div class="separator bg-light my-10"></div>

                                                    <div class="mb-10 fv-row fv-plugins-icon-container row">
                                                        <div class="col-12 col-xl-12">
                                                            <!--begin::Label-->
                                                            <label class="form-label text-dark fw-bolder fs-8 required">Contact Person</label>
                                                            <!--end::Label-->
                                                            <!--begin::Input-->
                                                            <input type="text" id="txtContactPerson" class="form-control form-control-sm fs-7 text-dark" maxlength="100">
                                                            <!--end::Input-->
                                                        </div>
                                                    </div>


                                                    <div class="mb-10 fv-row fv-plugins-icon-container row">

                                                        <div class="col-12 col-xl-6 mb-10">
                                                            <!--begin::Label-->
                                                            <label class="form-label text-dark fw-bolder fs-8 required">Phone</label>
                                                            <!--end::Label-->
                                                            <!--begin::Input-->
                                                            <input type="text" id="txtPhone" class="form-control form-control-sm fs-7 text-dark" maxlength="100">
                                                            <!--end::Input-->
                                                        </div>
                                                        <div class="col-12 col-xl-6 mb-10">
                                                            <!--begin::Label-->
                                                            <label class="form-label text-dark fw-bolder fs-8 required">Mobile</label>
                                                            <!--end::Label-->
                                                            <!--begin::Input-->
                                                            <input type="text" id="txtMobile" class="form-control form-control-sm fs-7 text-dark" maxlength="100">
                                                            <!--end::Input-->
                                                        </div>

                                                        <div class="col-12 col-xl-6 mb-10">
                                                            <!--begin::Label-->
                                                            <label class="form-label text-dark fw-bolder fs-8 required">Email</label>
                                                            <!--end::Label-->
                                                            <!--begin::Input-->
                                                            <input type="text" id="txtEmail" class="form-control form-control-sm fs-7 text-dark" maxlength="100">
                                                            <!--end::Input-->
                                                        </div>
                                                        <div class="col-12 col-xl-6 mb-10">
                                                            <!--begin::Label-->
                                                            <label class="form-label text-dark fw-bolder fs-8 required">Fax</label>
                                                            <!--end::Label-->
                                                            <!--begin::Input-->
                                                            <input type="text" id="txtFax" class="form-control form-control-sm fs-7 text-dark" maxlength="100">
                                                            <!--end::Input-->
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::General info-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>               
            </div>
        </div>
    </div>
    <!--end::Container-->
</div>