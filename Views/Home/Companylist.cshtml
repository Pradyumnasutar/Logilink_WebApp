                <!--end::Logo-->
                <!--begin::Company details-->
                <div class="d-flex flex-column ms-3">
                    <a href="Admin/CompanyInfo/100002" class="text-gray-800 text-hover-primary mb-1 fw-bolder fs-6">Test Buyer</a>
