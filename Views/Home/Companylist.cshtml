@{
    ViewData["Title"] = "Company List";
    Layout = "~/Views/Shared/_BaseMasterList.cshtml";
}

@section AdditionalActions {
    <button id="btnAddnew" class="btn btn-sm btn-success ModuleAccess" data-module="" data-access_level="1,2,3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" onclick="AddNew(this)">
        <i class="bi la-cart-plus fs-3 me-2"></i> Add User
    </button>
}

@section tableheader {
    <th style="display:none;"></th>
    <th class="min-w-40px text-gray-700 px-3" style="width:50%">Company</th>
    <th class="min-w-40px text-gray-700" style="width:10%">Type</th>
    <th class="min-w-40px text-gray-700" style="width:10%">Country</th>
}

